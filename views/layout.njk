<!doctype html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>
            Effective Octo - {{ title }}
        </title>
        {% if scriptEntry %}
            <script src="{{ scriptEntry }}" type="text/javascript" nonce="{{ nonce }}"></script>
        {% endif %}
        <link href="/public/css/base.css" rel="stylesheet" nonce="{{ nonce }}"/>
    </head>
    <body>
        {% if success %}
            <div id="success">{{ success }}</div>
        {% endif %}
        {% if errors %}
            <div id="errors">
                {% for error in errors %}
                    <div class="error">{{ error }}</div>
                {% endfor %}
            </div>
        {% endif %}
        {% if info %}
            <div id="info">{{ info }}</div>
        {% endif %}
        {% if credentials and credentials.username %}
            <div>Username: {{ credentials.username }}</div>
            <form method="post" accept-charset="UTF-8" action="/sign-out">
                <input type="hidden" name="csrf" value="{{ csrf }}"/>
                <input id="sign-out" type="submit" value="Sign out">
            </form>
        {% endif %}
        {% block body %}{% endblock %}
    </body>
</html>